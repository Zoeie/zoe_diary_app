<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_local_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/dairy_edit_title_bg"
            android:paddingStart="60dp"
            android:paddingTop="5dp"
            android:paddingEnd="60dp"
            android:paddingBottom="5dp"
            tools:text="周五.12月6/2019" />

        <ImageView
            android:id="@+id/iv_save_diary"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/diary_save_icon" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/color_1A000000"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/img_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:id="@+id/rl_add_img"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray">

                    <ImageView
                        android:tint="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/diary_img_add" />
                </RelativeLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/et_input_title"
                android:gravity="center"
                android:hint="Title"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="24sp"
                android:background="@null"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <ImageView
                    android:tint="@android:color/darker_gray"
                    android:id="@+id/tv_smile"
                    android:layout_margin="10dp"
                    android:src="@mipmap/smile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:tint="@android:color/darker_gray"
                    android:id="@+id/tv_weather"
                    android:layout_margin="10dp"
                    android:src="@mipmap/weather_cloudy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:tint="@android:color/darker_gray"
                    android:id="@+id/tv_heart"
                    android:layout_margin="10dp"
                    android:src="@mipmap/heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:tint="@android:color/darker_gray"
                    android:id="@+id/tv_tag"
                    android:layout_margin="10dp"
                    android:src="@mipmap/tag"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:tint="@android:color/darker_gray"
                    android:id="@+id/tv_location"
                    android:layout_margin="10dp"
                    android:src="@mipmap/location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/et_input_content"
                android:padding="10dp"
                android:hint="写下你的今天..."
                android:background="@null"
                android:singleLine="true"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>